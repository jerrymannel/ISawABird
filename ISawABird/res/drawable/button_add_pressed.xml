<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <gradient
                android:endColor="#EEEEEE"
                android:gradientRadius="230"
                android:startColor="#000000"
                android:type="radial" />

            <stroke
                android:width="2dp"
                android:color="#08BABABA" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval" >
            <padding
                android:bottom="15dp"
                android:top="50dp" />

            <gradient
                android:angle="270"
                android:endColor="#225378"
                android:startColor="#1695A3" />

            <stroke
                android:width="15dp"
                android:color="#EEEEEE" />
        </shape>
    </item>

</layer-list>