<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >

            <!-- <solid android:color="#55363636" /> -->
            <gradient
                android:angle="270"
                android:endColor="#737370"
                android:startColor="#BFBFBB" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval" >
            <solid android:color="#363636" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval" >
            <padding
                android:bottom="15dp"
                android:top="50dp" />

            <gradient
                android:angle="270"
                android:endColor="#225378"
                android:startColor="#1695A3" />

            <stroke
                android:width="10dp"
                android:color="#EEEEEE" />
        </shape>
    </item>

</layer-list>